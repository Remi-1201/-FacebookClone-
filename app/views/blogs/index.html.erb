<h1>All Posts</h1>
<div class="notifications">
 <div class="notice">
  <p id="notice"><%= notice %></p>
  </div>
</div>

<%= link_to 'Make new post', new_blog_path, class: 'link_blogs_index'%>
<br>
<br>
<div class="table_frame">
  <table>
      <% @blogs.each do |blog| %>
        <tr><th colspan="3" class="th_label"><%= blog.created_at.to_s(:datetime) %> by <%= blog.user.name %> </th></tr>
        <tr><th colspan="3" class="th_title">Title:&emsp;<%= blog.title %></th></tr>        
        <tr><th colspan="3" class="th_image"><%= blog.image %></th></tr>
        <tr><th colspan="3" class="th_content"><%= blog.content %></th></tr>
        <tr>
          <td><%= button_to 'Delete', blog_path(blog.id), method: :delete, class: "button2" %></td>

          <td><%= link_to 'Detail', blog_path(blog.id), class: "td_link" %></td>

          <td><%= link_to "Edit", edit_blog_path(blog.id), class: "td_link" %></td>          
        </tr>
      <% end %>
    </table>
  </div>

